@model List<CRUDWebApp.Models.Person>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container p-3">
    <a asp-controller="Person" asp-action="add" class="btn btn-success m-2">Dodaj</a>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Data urodzenia
                </th>
                <th>
                    Edytuj
                </th>
                <th>
                    Usuń
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surename</td>
                    <td>@item.Birth</td>
                    <td>
                        <a asp-controller="Person" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                    </td>
                    <td>
                       <a asp-controller="Person" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Usuń</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>